@import "../../styles/common";

.HeaderContainer {
	& {
		padding 20px 0
		background $brandColor
		margin-bottom 0px
		box-shadow 0 5px 10px rgba(0,0,0,0.2)
		position relative
		z-index 10
		@media $phone {
			padding 30px 16px 30px
			margin-bottom 0
		}
	}
	&__title {
		font-size 40px
		font-weight $bold
		line-height 1
		color #FFF
		text-transform uppercase
		padding-right 70px
		@media $verticalTablet {
			font-size 32px
		}
		@media $phone {
			font-size 24px
		}
	}
	&__lang {
		position absolute
		top 0
		right 0
	}
}