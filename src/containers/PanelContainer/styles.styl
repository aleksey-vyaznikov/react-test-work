@import "../../styles/common";

.Panel {
	& {
		// border-bottom 2px solid #8dacc7
		grid-width(3)
		float left
		padding-right 10px
		box-sizing border-box
		@media $verticalTablet {
			width 100%
			padding 0
		}
	}
	&__container {
		background #FFF
		box-shadow 0 10px 20px rgba(0,0,0,0.2)
		// padding 16px 0 32px
		display flex
		flex-direction column
		@media $verticalTablet {
			flex-direction row
			flex-wrap wrap
			justify-content space-between
			margin-bottom 24px
		}
		@media $phone {
			align-items center
			// 
		}
		@media $verticalPhone {
			flex-direction column
			align-items flex-start
		}
		padding 16px
	}
	&__group {
		// padding 0 32px
		margin-bottom 24px
		box-sizing border-box
		@media $verticalTablet {
			margin-bottom 0
			&_search {
				width 100%
				margin-bottom 16px
			}
		}
		@media $phone {
			// padding 0 16px
			display flex
			align-items center
			// 
		}
		@media $verticalPhone {
			margin-bottom 16px
			margin-bottom 16px
		}
		&__title {
			color $textColor
			margin-bottom 8px
			position relative
			display flex
			align-items center
			font-weight $black
			@media $phone {
				display none
				margin-bottom 0
			}
		}
		&__name {
			@media $phone {
				padding-right 16px
				// display none
			}
			@media $verticalPhone {
				display none
			}
		}
		&__icon {
			fill $secondTextColor
			width 20px
			padding-right 10px
			svg {
				width 100%
			}
		}
		&:last-child {
			margin-bottom 0
		}
	}
	&__buttons {
		font-weight $black
		display flex
	}
}